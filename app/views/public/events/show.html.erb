<div class="solid">
  <h2><%= @event.title %></h2>
  <%= raw(@event.description) %>

  <div id="fullmap" style="height: 100%;min-height:300px;margin:-30px;margin-top:30px"></div>
</div>
<script>
  var map;
  function initFullMap() {
    var location = {lat: <%= @event.lat %>, lng: <%= @event.lng %>}
    map = new google.maps.Map(document.getElementById('fullmap'), {
      center: location,
      disableZoom: true,
      zoom: 11
    });

    var marker = new google.maps.Marker({
      position: location,
      map: map
    });
  }
</script>

<% content_for :init_maps do %>
  initFullMap();
<% end %>