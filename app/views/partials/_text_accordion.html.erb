<div id="accordion">
  <% @page.accordion.each.with_index do |item, i| %>
    <div class="card">
      <div class="card-header" id="heading<%= i %>">
          <div class="accordion-toggle" data-toggle="collapse" data-target="#collapse<%= i %>" aria-expanded="true" aria-controls="collapse<%= i %>">
            <div class="accordion-header align-left"><%= item["title"] %></div>

            <div style="clear: both;"></div>
          </div>
      </div>

      <div id="collapse<%= i %>" class="collapse" aria-labelledby="heading<%= i %>" data-parent="#accordion">
        <div class="card-body">
          <%= raw(item["content"]) %>
        </div>
      </div>

    </div>

  <% end %>
</div>